{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["es2015", "es2016", "es2017", "es2018"],
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": false,
		"strict": true,
		"strictPropertyInitialization": false,
		"strictFunctionTypes": false,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/"]
}
